{
  "name": "auth-sso-react",
  "version": "0.0.2",
  "description": "OAuth SSO React",
  "repository": "",
  "main": "js/app.js",
  "dependencies": {
    "async": "^0.9.0",
    "crypto-js": "^3.1.4",
    "events": "^1.0.2",
    "flux": "^2.0.3",
    "htmlescape": "^1.0.0",
    "keymirror": "~0.1.0",
    "lodash-node": "^2.4.1",
    "log4js": "^0.6.22",
    "node-jsx": "^0.12.4",
    "object-assign": "^1.0.0",
    "path-to-regexp": "^1.1.1",
    "q": "^1.1.2",
    "react": "^0.13.3",
    "react-addons": "^0.9.1-deprecated",
    "react-pure-render": "^1.0.1",
    "react-router": "^0.13.3",
    "react-validation-mixin": "^4.0.4",
    "route-builder": "0.0.1",
    "selectn": "^0.9.6",
    "superagent": "^0.21.0",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babelify": "^6.1.2",
    "browserify": "^6.2.0",
    "core-js": "^0.9.13",
    "envify": "^3.0.0",
    "gulp": "^3.8.11",
    "gulp-uglify": "^1.2.0",
    "jest-cli": "~0.1.17",
    "reactify": "^0.15.2",
    "uglify-js": "~2.4.15",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^2.1.1",
    "whatwg-fetch": "^0.8.2"
  },
  "scripts": {
    "build-login": "browserify app/login.js --standalone Application --debug --outfile ../public/js/login.js",
    "build-login-min": "browserify app/login.js --standalone Application --debug | uglifyjs -cm > ../public/js/login.js",
    "build-register": "browserify app/register.js --standalone Application --debug --outfile ../public/js/register.js",
    "build-register-min": "browserify app/register.js --standalone Application --debug | uglifyjs -cm > ../public/js/register.js",
    "build-forgot": "browserify app/forgot-password.js --standalone Application --debug --outfile ../public/js/forgot-password.js",
    "build-forgot-min": "browserify app/forgot-password.js --standalone Application --debug | uglifyjs -cm > ../public/js/forgot-password.js",
    "build-reset": "browserify app/reset-password.js --standalone Application --debug --outfile ../public/js/reset-password.js",
    "build-reset-min": "browserify app/reset-password.js --standalone Application --debug | uglifyjs -cm > ../public/js/reset-password.js",
    "build-all-login": "npm run build-login && npm run build-register && npm run build-forgot && npm run build-reset",
    "build-all-login-min": "npm run build-login-min && npm run build-register-min && npm run build-forgot-min && npm run build-reset-min",
    "build-cms": "browserify app/cms/app.js --standalone Application --debug --outfile ../public/js/cms.js",
    "test": "jest"
  },
  "author": "Stanley",
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "rootDir": "./app"
  }
}
