  "main": "js/app.js",
  "dependencies": {
    "async": "^0.9.0",
    "crypto-js": "^3.1.4",
    "flux": "^2.0.0",
    "htmlescape": "^1.0.0",
    "keymirror": "~0.1.0",
    "lodash-node": "^2.4.1",
    "log4js": "^0.6.22",
    "node-jsx": "^0.12.4",
    "object-assign": "^1.0.0",
    "path-to-regexp": "^1.1.1",
    "q": "^1.1.2",
    "react": "^0.12.0",
    "react-addons": "^0.9.1-deprecated",
